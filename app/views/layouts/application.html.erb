	<body>
		<div class="container">
			<header>
				<%= image_tag("logo.gif", :alt => "Project Christmas", 
										  :class => "round") %>
				<nav class="round">
					<ul>
						<li><%= link_to "Sign in", '#'%></li>
						<li><%= link_to "Contact", '#'%></li>
						<li><%= link_to "About", '#'%></li>
					</ul>
				</nav>
			</header>
			<section>
				<%= yield %>	
			</section>
		</div>
		
	</body>
</html>
